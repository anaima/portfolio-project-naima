<!-- Button return On Top -->
<div id="returnOnTop">
  <img alt="bouton retour en haut" src="img/backtop.png">
</div>

<p id="notice"><%= notice %></p>
<div class="container">

  <h2>My projects (<%= @projects.count %>)</h2>

  <div class="row">
    <% @projects.each do |project| %>
    <div class="col s4">
      <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
          <img alt="<%= project.title %>" class="activator" src="<%= project.picture %>">
        </div>
        <div class="card-content">
          <span class="card-title activator text-darken-4" style="color:#F0514D; text-decoration: underline; font-family:bold;"><%= truncate(project.title, length: 17) %>
            <i class="material-icons right">info</i>
          </span>
          <p>
            <div class="button_wrapper center-align">
              <a class="waves-effect waves-light btn-large" href="<%= project.link %>" target="_blank">Site officiel</a>
            </div>
          </p>
        </div>
        <div class="card-reveal">
          <span class="card-title text-darken-4" style="color:#F0514D; text-decoration: underline; font-family:bold;"><%= project.title %>
            <i class="material-icons right">close</i>
          </span>
          <p><%= truncate(project.description, length: 150) %></p>
        </div>
        <!-- <%= link_to 'Show', project %> -->
        <!-- <%= link_to 'Edit', edit_project_path(project) %> -->
        <!-- <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %> -->
      </div>
    </div>
    <% end %>
  </div>

  <br>

  <!-- <%= link_to 'New Project', new_project_path %> -->

  <br>

</div>
