  <!-- Second Row SLIDE -->
  <div class="row">
    <% @projects.each do |project| %>
    <div class="col s4 m4">
      <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
          <img alt="<%= project.title %>" class="activator" src="<%= project.picture %>"/>
          <!-- <%= image_tag(project.picture_url(:thumb), size: "100x100") %> -->
        </div>
        <div class="card-content">
          <span class="card-title activator text-darken-4" style="color:#F0514D; text-decoration: underline; font-family:bold;"><%= truncate(project.title, length: 17) %>
            <i class="material-icons right">info</i>
          </span>
          <p>
            <div class="button_wrapper center-align">
              <a class="waves-effect waves-light btn-large" href="<%= project.link %>" target="_blank">Site officiel</a>
            </div>
          </p>
        </div>
        <div class="card-reveal">
          <span class="card-title text-darken-4" style="color:#F0514D; text-decoration: underline; font-family:bold;"><%= project.title %>
            <i class="material-icons right">close</i>
          </span>
          <p><%= truncate(project.description, length: 500) %></p>
        </div>
      </div>
    </div>
    <% end %>
